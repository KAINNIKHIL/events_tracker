{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "src",
    "outDir": "dist",

    /* Module + Target setup */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    /* Enable default Node types */
    "types": ["node"],

    /* Compatibility */
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* Debugging + build */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict mode */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src"]
}
